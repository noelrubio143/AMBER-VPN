#!/data/data/com.termux/files/usr/bin/bash # Termux SCRIPT # Colors RED='\033[0;31m' GREEN='\033[0;32m' YELLOW='\033[1;33m' BLUE='\033[0;34m' CYAN='\033[0;36m' WHITE='\033[1;37m' NC='\033[0m' VER="4.2" # Detect architecture get_arch() { case "$(uname -m)" in aarch64) echo "aarch64" ;; x86_64) echo "x86_64" ;; armv7l|armv8l|arm) echo "arm" ;; i*86) echo "i686" ;; *) echo "unknown" ;; esac } # Check for supported architecture ARCH_TYPE="$(get_arch)" if [[ "$ARCH_TYPE" != "aarch64" && "$ARCH_TYPE" != "x86_64" ]]; then echo -e "${RED}Unsupported architecture: $ARCH_TYPE${NC}" echo -e "${YELLOW}Please download Termux for architecture: aarch64 or x86_64${NC}" exit 1 fi # Check for Termux if [ ! -d "/data/data/com.termux" ]; then echo -e "${RED}This script is for Termux only!${NC}" exit 1 fi clear_screen() { clear } show_loading_bar() { echo -e "${WHITE}Installing Termux Script...${NC}" echo local width=20 local progress=0 local ARCH="$(get_arch)" local URL_BASE="https://github.com/hahacrunchyrollls/TERMUX-SCRIPT/raw/refs/heads/main" local SCRIPT_NAME="termux-script-version-$VER" # If you have arch-specific binaries, append -$ARCH # Uncomment the following line if needed: # SCRIPT_NAME="termux-script-version-$VER-$ARCH" while [ $progress -lt 100 ]; do case $progress in 0) run_silently "rm -rf install"; progress=10 ;; 10) run_silently "apt update -y"; progress=20 ;; 20) run_silently "apt install -y wget"; progress=30 ;; 30) run_silently "apt install -y dnsutils"; progress=40 ;; 40) run_silently "apt install -y nano"; progress=50 ;; 50) run_silently "wget $URL_BASE/$SCRIPT_NAME"; progress=70 ;; 70) run_silently "chmod +x $SCRIPT_NAME"; progress=80 ;; 80) run_silently "mv $SCRIPT_NAME /data/data/com.termux/files/usr/bin/menu"; progress=100 ;; esac filled=$((progress * width / 100)) bar="[" for ((i=0; i<filled; i++)); do bar+="■"; done for ((i=filled; i<width; i++)); do bar+=" "; done bar+="]" printf "\r%s %3d%%" "$bar" "$progress" sleep 0.2 done printf "\n" } run_silently() { eval "$1" >/dev/null 2>&1 || return 1 } show_header() { clear_screen echo -e "${WHITE}╔══════════════════════════╗${NC}" echo -e "${WHITE} PHC_Jerico Termux Script ${NC}" echo -e "${WHITE} Version: $VER ${NC}" echo -e "${WHITE}╚══════════════════════════╝${NC}" echo } main_installation() { show_header show_loading_bar echo echo -e "${WHITE}╔══════════════════════════╗${NC}" echo -e "${WHITE} INSTALLATION COMPLETE ${NC}" echo -e "${WHITE}╚══════════════════════════╝${NC}" echo echo -e "${CYAN}TERMUX SCRIPT${NC}" echo -e "${BLUE}https://phcorner.net/members/phc_jerico.1922181${NC}" echo echo -e "${YELLOW}Press Enter to continue...${NC}" read -p "" } handle_error() { echo -e "\n${RED}Error at ${progress}%!${NC}" echo -e "${YELLOW}Try:${NC}" echo -e "1. Checking internet" echo -e "2. Running 'apt update'" exit 1 } trap 'handle_error' ERR main_installation echo -e "${GREEN}Ready! Type 'menu' to start${NC}"